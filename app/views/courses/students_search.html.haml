.container{style: "max-width:800px"} 
  %h3 You are an admin for #{@course.context_id}

  %h4 Students
  =bootstrap_form_tag :url => students_search_path(@course), :method => "POST" do |f|
    .row
      .col-lg-4
        .form-group
          %input{type: "text", class: "form-control", placeholder: "Search by Username", name: :username}
      .col-lg-2=f.submit "Search for students", :class => 'btn btn-primary'  
  -if @students.count > 0
    .row
      .col-md-10.col-md-offset-1
        %table.table.table-striped
          %thead
            %tr
              %th Username
              %th Student Info
          %tbody
            -@students.each do |student|
              %tr
                %td= student.username
                %td= link_to("View Student Info", student_path(student))        
  -else
    %p We didn't find any students