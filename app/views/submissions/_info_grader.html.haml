-if @submission.graded_at.present?
  %hr
  %h4 Grader Info
  %p
    Graded By:
    =@submission.graded_by_username  
  %p
    Current Grade:
    =number_to_percentage(@submission.grade*100, precision: 0)
  -if @submission.grader_document.present?
    %p
      =link_to("View Grader Document", @submission.grader_document.url, target: "_blank", class: "btn btn-danger")
  -else
    %p No grader document uploaded        
  -if @submission.feedback.present?
    %p
      Grader Feedback:
      =@submission.feedback